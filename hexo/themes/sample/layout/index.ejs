<div class="navbar-wrapper">
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="#profile">Profile</a>
          <a class="nav-item nav-link" href="#skills">Skills</a>
          <a class="nav-item nav-link" href="#works">Works</a>
          <a class="nav-item nav-link" href="#contact">Contact</a>
        </div>
      </div>
  </nav>    
</div>
<div class="container-fluid"> 
  <div class="row main-wrapper">
    <div class="offset-sm-1 col-sm-10 main-content">
      <div id="profile" class="article">   
        <h1>Profile</h1>
        <div class="profile-text">
          <p><%= site.data.index['profile']['text'] %></p>
        </div>
        <h3>経歴</h3>
        <div class="row">
          <%- partial('_partial/history', {history: site.data.index['profile']['history']}) %>
        </div>
      </div>
      <div id="skills" class="article">        
        <h1>Skills</h1>
        <div class="skill_sheets row">
          <% for (var skill of site.data.index['skills']) { %>
            <%- partial('_partial/skill_card', {skill: skill}) %>
          <% } %> 
        </div>
      </div>    
      <div id="works" class="article">
        <h1>Works</h1>
        <% for (var work of site.data.index['works']) { %>
          <%- partial('_partial/work_card', {work: work}) %>
        <% } %>
      </div>    
      <div id="contact" class="article">
        <h1>Contact</h1>
        coming soon...
      </div>
    </div>
  </div>
</div>
        