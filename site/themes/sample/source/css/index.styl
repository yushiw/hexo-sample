$maincolor = #711;
$basecolor = #f0d3d1;
$black = #555;

@import "_partial/*"
.main-wrapper {
  padding: 40px 0;
  background-color: $basecolor;
  .article {
    padding: 40px 40px;
    margin: 40px 40px;
    background-color: #fff;
  }
 
  @media all and (max-width: 600px) {
    .article {
      padding: 1rem 0;
      margin: 1rem;
    }
  }
  h1 {
    padding: 20px;
    text-align: center;    
  }
  h3 {
    color: $maincolor
    text-align: center;
    padding: 0 10px;
  }
  h3::before {
    content: "- "    
  }
  h3::after {
    content: " -"
  }
}
body {
  width: 100%;
}
* {
  color: $black;
  margin: 0;
  padding: 0;
  max-width: 100%; 
  h1 {
    color: $maincolor;
  }
  .table {
    th,
    td {
      border-color: $basecolor;
    }
    border-bottom: solid 1px $basecolor;
  }
  ul {
    list-style: none;
  }
}
